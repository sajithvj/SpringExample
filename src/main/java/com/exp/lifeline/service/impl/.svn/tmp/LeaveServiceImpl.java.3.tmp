	public List<LeaveAvailability> getPreviousAvailableLeaves(int empCode) throws ParseException{
		SimpleDateFormat sf = new SimpleDateFormat("MM/dd/yyyy");
		  Date joiningDate = leaveDAO.getJoiningDate(empCode);
		  Date[] leaveDurationArray = LTSUtil.getCurrentLeaveYear(joiningDate);
		  Calendar calDate = Calendar.getInstance();
		  calDate.setTime(leaveDurationArray[0]);
		  calDate.add(Calendar.DATE, -1);
		  Date previousLeaveYearTo = sf.parse(sf.format(calDate.getTime()));
		  calDate.add(Calendar.YEAR, -1);
		  calDate.add(Calendar.DATE, 1);
		  Date previousLeaveYearFrom = sf.parse(sf.format(calDate.getTime()));
		  List<LeaveAvailability> empPreviousDetails = leaveDAO.getAvailableLeaves(empCode, previousLeaveYearFrom, previousLeaveYearTo);
		  return empPreviousDetails;
	}
	
	
